<div class="container">

  <h1>My Tasks</h1>

  <div class="btn btn-primary">
    <%= link_to "Create a new task", tasks_new_path %>
  </div>

  <% @tasks.each do |task| %>
      <div>
        <span>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
      </span>
      </div>
  <% end %>


</div>


